<div class="container mt-4">
  <h1 class="text-center">Lista de usuários</h1>
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Usuário</th>
        <th scope="col">Admin?</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= user.email %></td>
          <td><%= user.admin %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'Voltar', root_path, class:"btn btn-info" %>
  <%= link_to 'Criar novo usuário', new_user_registration_path, class:"btn btn-info" %>


</div>
